# Custom Coverage Exclusions
GO_COVERAGE_EXCLUDE_PATHS=test/,vendor/,testdata/,examples/,mocks/,docs/

# Google Analytics Configuration (for coverage pages)
#GOOGLE_ANALYTICS_ID=

# Coverage Report Provider (e.g., codecov, internal)
GO_COVERAGE_PROVIDER=codecov

# Codecov Configuration (only used when provider=codecov)
CODECOV_TOKEN_REQUIRED=true

# Nancy CVE Exclusions (known acceptable vulnerabilities)
NANCY_EXCLUDES=CVE-2026-24051

# Govulncheck/Magex CVE Exclusions (consistency with Nancy)
MAGE_X_CVE_EXCLUDES=CVE-2026-24051
